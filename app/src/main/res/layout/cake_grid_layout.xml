<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/gcard_view"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/g_thumbnail"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_above="@+id/gtv_cake_name"/>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#8A0F0F0F"
                android:layout_alignBottom="@+id/gtv_cake_name"
                android:layout_alignTop="@+id/gtv_cake_name"/>
            <TextView
                android:id="@+id/gtv_cake_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gtv_cake_price"
                android:text="100 Order"
                android:textSize="15sp"
                android:textColor="#fff"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/gtv_cake_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="15sp"
                android:textColor="#E91E63"
                android:padding="5dp"
                android:textStyle="bold"/>
            <!--android:text="Name Food"-->



            <Button
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Detail"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:background="#0F0F0F"
                android:textColor="#E91E63"

                />
            <!--android:text="1,0000MMK"-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>



