<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#009688">


    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="Product Catalog"
        android:textColor="#000000"
        android:textSize="24dip"></TextView>


    <ListView
        android:id="@+id/ListViewCatalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#E91E63"
        android:cacheColorHint="#009688"
        android:clickable="true"></ListView>

    <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="5dip"
                android:layout_gravity="right" android:id="@+id/ButtonViewCart"
                android:text="View Shopping Cart"></Button>




</LinearLayout>